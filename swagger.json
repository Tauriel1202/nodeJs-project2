{
  "swagger": "2.0",
  "info": {
    "title": "Week 5-8 Node.js project: Characters and Quotes",
    "description": "Presenting: Characters! See their stats: names, series, appearances, and homelands. Now, with sibings!",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/characters/": {
      "get": {
        "description": "Grab all the characters!",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "internal error"
          }
        }
      },
      "post": {
        "description": "Add a new Character!",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstname": {
                  "example": "First Name"
                },
                "lastname": {
                  "example": "Last Name"
                },
                "series": {
                  "type": "array",
                  "example": "series1, series2, series3"
                },
                "homeland": {
                  "example": "Homeland"
                },
                "currentHome": {
                  "example": "Current Home"
                },
                "species": {
                  "example": "Species"
                },
                "hairColor": {
                  "example": "Hair Color"
                },
                "eyeColor": {
                  "example": "Eye Color"
                },
                "favColor": {
                  "example": "Favorite Color"
                },
                "age": {
                  "type": "int",
                  "numberInt": 0
                },
                "siblings": {
                  "type": "array",
                  "example": "Sib1, Sib2, Sib3"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created!"
          }
        }
      }
    },
    "/characters/{id}": {
      "get": {
        "description": "Find One Character!",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "description": "Update a Character!",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstname": {
                  "example": "First Name"
                },
                "lastname": {
                  "example": "Last Name"
                },
                "series": {
                  "type": "array",
                  "example": "series1, series2, series3"
                },
                "homeland": {
                  "example": "Homeland"
                },
                "currentHome": {
                  "example": "Current Home"
                },
                "species": {
                  "example": "Species"
                },
                "hairColor": {
                  "example": "Hair Color"
                },
                "eyeColor": {
                  "example": "Eye Color"
                },
                "favColor": {
                  "example": "Favorite Color"
                },
                "age": {
                  "type": "int",
                  "numberInt": 0
                },
                "siblings": {
                  "type": "array",
                  "example": "Sib1, Sib2, Sib3"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "204": {
            "description": "Updated"
          }
        }
      },
      "delete": {
        "description": "Delete a Character! ❌",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/quotes/": {
      "get": {
        "description": "Collect all the Quotes!",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "internal error"
          }
        }
      },
      "post": {
        "description": "Save a Quote!",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "quote": {
                  "example": "quote to add here"
                },
                "author": {
                  "example": "author of quote"
                },
                "loc": {
                  "example": "where it it from -- format: place, series"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created!"
          }
        }
      }
    },
    "/quotes/{id}": {
      "get": {
        "description": "Find One Quote!",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "description": "Update a Quote!",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "quote": {
                  "example": "change the quote"
                },
                "author": {
                  "example": "update the author"
                },
                "loc": {
                  "example": "modify the place or series"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Updated!"
          }
        }
      },
      "delete": {
        "description": "Delete a Quote! ❌",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api-docs": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
